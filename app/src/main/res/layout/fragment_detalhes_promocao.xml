<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="30dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/imgPromocaoDetalhes"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_menu_slideshow" />

        <TextView
            android:id="@+id/txtDescricaoPromocaoDetalhes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descricao"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/txtPasso1PromocaoDetalhes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="passo 1"
            android:textSize="18dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/txtPasso2PromocaoDetalhes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="passo 2"
            android:textSize="18dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/txtPasso3PromocaoDetalhes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="passo 3"
            android:textSize="18dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnParticiparPromocao"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Participar"
            android:layout_marginTop="30dp"
            android:background="#FF5722"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/txtValidadePromocaoDetalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="validade"
            android:textSize="16dp"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</ScrollView>